<div class="card">

<h2 class="card-header">Log in</h2>
</br>

<div class="card-body">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mb-3 w-25">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"form-control" %>
  </div>

  <div class="field mb-3 w-25">
    <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password", class:"form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb-3 w-25">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions mb-3 w-25">
    <%= f.submit "Log in", class:"form-control" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>