  <tbody>

    <% if friend.user == current_user %>
    <tr>
      <td>
        <%= link_to friend.first_name.capitalize + ' ' + friend.last_name.capitalize , friend %>
        </td>
      <td><%= friend.email %></td>
      <td><%= friend.phone %></td>
      <td><%= friend.twitter %></td>

    </tr>
    <% end %>
  </tbody>



